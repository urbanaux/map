!!!
%html
  %head
    %meta{content: 'IE=edge', 'http-equiv' => 'X-UA-Compatible'}
    %meta{charset: 'utf-8'}
    %meta{content: 'width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no', name: 'viewport'}
    %title= 'Urbanaux'
    %link{href: asset_path(:images, 'favicon/favicon-96x96.png'), rel: 'icon', sizes: '32x32', type: 'image/png'}
    %link{href: asset_path(:images, 'favicon/favicon-32x32.png'), rel: 'icon', sizes: '32x32', type: 'image/png'}
    %link{href: asset_path(:images, 'favicon/favicon-16x16.png'), rel: 'icon', sizes: '16x16', type: 'image/png'}
    = stylesheet_link_tag :site
    = javascript_include_tag :all
  %body
    = yield
    - if environment == :development
      = javascript_include_tag '//maps.google.com/maps/api/js?libraries=places'
    - else
      = javascript_include_tag '//maps.google.com/maps/api/js?key=AIzaSyCoCduD5RmK5jGEdyxogQj0vfxW3ri4Av8&libraries=places'

